generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String @map("first_name")
  lastName String @map("last_name")
  //in db we prefer snakecase where as in code we prefer camel
  email String @unique
  password String
  salt String
  profileImageURL String @default("https://via.placeholder.com/150") @map("profile_image_url")

  @@map("users")
  
}

